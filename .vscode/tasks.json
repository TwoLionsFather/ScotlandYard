{
    "tasks": [
        {
            "label": "MakeFile Build sly",
            "type": "shell",
            "command": "",
            "args": [
                "make",
                "--directory=${workspaceFolder};"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal":"always"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task generated by Tiep."
        },
        {
            "type": "cppbuild",
            "label": "Default: C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "${workspaceFolder}/cpp/**.cpp",
                "-o",
                "${workspaceFolder}/sly",
                "-lX11",
                "-lGL",
                "-lpthread",
                "-lpng",
                "-lstdc++fs",
                "-std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}